{
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "advanced",
		"diffEditor.ignoreTrimWhitespace": false
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"node_modules": true,
		".github": true,
		".vscode": true,
		".githooks": true,
		"package-lock.json": true
	},
	"markdownlint.config": {
		"default": true,
		"MD041": false,
		"MD033": false
	}
}
